{
  "name": "uni-search",
  "version": "1.0",
  "description": "Personal search tool",
  "permissions": ["webRequest", "webRequestBlocking", "<all_urls>"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["scrollbar.css"],
      "all_frames": true
    }
  ],
  "manifest_version": 2,
  "chrome_url_overrides": {
    "newtab": "index.html"
  }
}
